@model IEnumerable<Web.Models.Appointment>

@{
    ViewBag.Title = "ChooseAppointmentTime";
}

<h2>Choose Appointment Time</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Startdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enddate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartEndDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Startdate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Enddate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartEndDate)
        </td>
        <td>
            @Html.ActionLink("Book", "BookTime", new {  startDate=item.Startdate , endDate=item.Enddate }) |
          
        </td>
    </tr>
}

</table>
