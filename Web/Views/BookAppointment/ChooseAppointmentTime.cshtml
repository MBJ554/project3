@model IEnumerable<Web.Models.Appointment>

@{
    ViewBag.Title = "Book Tid";
}

<h2>Vælg et tidspunkt for den @ViewBag.SelectedDate</h2>

<table class="table">
    <tr>
        <th>
            Start tid
        </th>
        <th>
            Slut tid
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) 
{
    <tr>
        <td>
            @item.Startdate.TimeOfDay.ToString()
        </td>
        <td>
            @item.Enddate.TimeOfDay.ToString()
        </td>
        <td>
            @Html.ActionLink("Book", "BookTime", "BookAppointment", new {startDateTime = item.Startdate, endDateTime = item.Enddate}, new {@class = "btn btn-info"})
        </td>
    </tr>
}
</table>
