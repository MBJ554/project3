<Window x:Class="Desktop.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="450" Background="#FF0084DF" FontSize="14" FontFamily="Segoe UI Semilight" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Border Background="LightGray" CornerRadius="20" Margin="20">
        <StackPanel Margin="15">
            <Image Source="/images/trackspacesort.png" Width="250" />
            <Separator></Separator>
            <Label Content="Email" Foreground="Gray" FontSize="18"></Label>
            <TextBox Name="txtEmail" Background="#FFF7F7F7" Foreground="Black" FontSize="18" />
            <Label Content="Password" Foreground="Gray" FontSize="18"></Label>
            <PasswordBox Name="txtPassword" Background="#FFF7F7F7" Foreground="Black" FontSize="18" />
            <Button Name="btnSubmit" Content="Log ind" Margin="60 30" Click="btnSubmit_Click"></Button>
            <Button Name="btnExit" Content="Exit" Width="70" Background="DarkRed" Click="btnExit_Click"></Button>
        </StackPanel>
    </Border>
</Window>